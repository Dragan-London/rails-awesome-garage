<br>
<div class= "margins_2">
  <div class="card-car">
    <%= image_tag @car.image_url %>
    <br>
    <br>
    <div class= "flexy">
      <div>
        <h2><%= @car.brand %></h2>
        <h3><%= @car.model %></h3>
        <p><%= @car.fuel %></p>
        <p><%= @car.year %></p>
        <br>
        <% if @car.favourites.empty? %>
            <%= simple_form_for [@car, @favourite] do |f| %>
              <%= f.submit "Save in my Garage", class: "btn btn-primary" %>
            <% end %>
          <% else %>
            <p>This car is already in your Garage</p>
          <% end %>
      </div>

      <div>
        <h3>Your review:</h3>
          <%= simple_form_for [@car, @review] do |f| %>
          <%= f.input :comment %>
          <%= f.input :rating, collection: 1..5 %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>

    <div class="comments">
      <hr>
      <% @car.reviews.each do |review| %>
      <p><%= review.comment %></p>
      <p><%= '⭐️' * review.rating %></p>
      <% end %>
      <hr>
    </div>

  </div>
</div>
